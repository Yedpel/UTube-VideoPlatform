<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/comment_profile_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:contentDescription="Profile Picture" />

    <TextView
        android:id="@+id/comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/comment_profile_pic"
        android:layout_marginStart="8dp"
        android:text="Username"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment_upload_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/comment_username"
        android:layout_alignBaseline="@id/comment_username"
        android:layout_marginStart="8dp"
        android:text="Upload Time" />

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_username"
        android:layout_toEndOf="@id/comment_profile_pic"
        android:layout_marginStart="8dp"
        android:text="Comment Text" />

    <TextView
        android:id="@+id/comment_likes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_text"
        android:layout_toEndOf="@id/comment_profile_pic"
        android:layout_marginStart="8dp"
        android:text="0 likes" />

    <Button
        android:id="@+id/like_comment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_text"
        android:layout_toEndOf="@id/comment_likes_count"
        android:layout_marginStart="8dp"
        android:text="Like" />

    <Button
        android:id="@+id/edit_comment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_likes_count"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Edit" />

    <Button
        android:id="@+id/delete_comment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_likes_count"
        android:layout_toEndOf="@id/edit_comment_button"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Delete" />
</RelativeLayout>
